<Window x:Class="PROJECT_PRN.UpdateAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Account" Height="600" Width="600"
        Background="#F0F8FF" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" KeyDown="Window_KeyDown">

    <Grid>
        <Label Content="Update Account" HorizontalAlignment="Center" VerticalAlignment="Top"
               FontSize="24" FontWeight="Bold" Margin="0,20,0,0" Foreground="#FF4500"/>

        <!-- Full Name -->
        <Label Content="Full Name:" HorizontalAlignment="Left" Margin="20,80,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="FullNameTextBox" HorizontalAlignment="Left" Margin="150,80,0,0" VerticalAlignment="Top" Width="400" Height="30" BorderBrush="#FF8C00" BorderThickness="1"/>

        <!-- Email -->
        <Label Content="Email:" HorizontalAlignment="Left" Margin="20,130,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" Margin="150,130,0,0" VerticalAlignment="Top" Width="400" Height="30" BorderBrush="#FF8C00" BorderThickness="1"/>

        <!-- Role -->
        <Label Content="Role:" HorizontalAlignment="Left" Margin="20,180,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="RoleComboBox" HorizontalAlignment="Left" Margin="150,180,0,0" VerticalAlignment="Top" Width="400">
            <ComboBoxItem Content="Admin"/>
            <ComboBoxItem Content="Citizen"/>
            <ComboBoxItem Content="TrafficPolice"/>
        </ComboBox>

        <!-- Phone -->
        <Label Content="Phone:" HorizontalAlignment="Left" Margin="20,230,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PhoneTextBox" HorizontalAlignment="Left" Margin="150,230,0,0" VerticalAlignment="Top" Width="400" Height="30" BorderBrush="#FF8C00" BorderThickness="1"/>

        <!-- Address -->
        <Label Content="Address:" HorizontalAlignment="Left" Margin="20,280,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="AddressTextBox" HorizontalAlignment="Left" Margin="150,280,0,0" VerticalAlignment="Top" Width="400" Height="30" BorderBrush="#FF8C00" BorderThickness="1"/>

        <!-- Vehicle Information -->
        <Label Content="Plate Number:" HorizontalAlignment="Left" Margin="20,328,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PlateNumberTextBox" HorizontalAlignment="Left" Margin="150,328,0,0" VerticalAlignment="Top" Width="400" Height="30" BorderBrush="#FF8C00" BorderThickness="1" IsReadOnly="True"/>

        <Label Content="Vehicle Name:" HorizontalAlignment="Left" Margin="20,377,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="VehicleNameTextBox" HorizontalAlignment="Left" Margin="150,373,0,0" VerticalAlignment="Top" Width="400" Height="30" BorderBrush="#FF8C00" BorderThickness="1"/>

        <Label Content="Vehicle Type:" HorizontalAlignment="Left" Margin="20,427,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="VehicleTypeTextBox" HorizontalAlignment="Left" Margin="150,425,0,0" VerticalAlignment="Top" Width="400" Height="30" BorderBrush="#FF8C00" BorderThickness="1"/>

        <!-- Save Changes Button -->
        <Button Content="Save Changes" HorizontalAlignment="Center" Margin="0,502,0,0" VerticalAlignment="Top"
                Width="150" Height="40" Background="#FF8C00" Foreground="White" Click="SaveChangesButton_Click"/>
    </Grid>
</Window>
